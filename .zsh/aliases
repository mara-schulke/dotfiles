alias sudo="sudo "
alias lock="slock"
alias reload="source ~/.zshrc"
alias search="firefox --search"
alias scrot='scrot ~/Documents/screenshots/%y%m%d-%H%M%S.png'

# chrome
alias chromium-headless-="chromium --kiosk --new-window"

# dotfiles
alias config="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias cst="config status"
alias ca="config add" 
alias cc="config commit"
alias cco="config checkout"
alias cf="config fetch"
alias cp="config push"

# django
alias django="python ./src/manage.py"
alias djangorun="django runserver 0.0.0.0:8000"
alias djangoinstall="pip install -r ./resources/requirements.txt"

# node
alias yarn="npx yarn"
alias webpack="npx webpack"

# exa
alias ls="exa --long --all --icons --group-directories-first --git --header"
alias lsd="ls -D"
alias lst="ls -T --git-ignore -I=.git"

# bat
alias cat="bat"

# ag
alias ag="ag --path-to-ignore ~/.config/ag/.ignore"

# filemanager
alias fm="nautilus"

# neovim
alias vim="nvim"

