alias lock="i3lock"
alias reload="source ~/.zshrc"

alias firefox="firefox-developer-edition"
alias chromium="chromium --kiosk --new-window"
alias search="firefox --search"

alias scrot='scrot ~/Documents/screenshots/%y%m%d-%H%M%S.png'

# dotfiles
alias dotfiles="git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias df="dotfiles"
alias dfs="dotfiles status"
alias dfa="dotfiles add" 
alias dfc="dotfiles commit"
alias dfco="dotfiles checkout"
alias dff="dotfiles fetch"
alias dfp="dotfiles push"

# django
alias django="python ./src/manage.py"
alias djangorun="django runserver 0.0.0.0:8000"
alias djangoinstall="pip install -r ./resources/requirements.txt"

#alias vim="nvim"

# node
alias yarn="npx yarn"
alias webpack="npx webpack"

# exa
alias ls="exa --long --all --icons --group-directories-first --git --header"
alias lsd="ls -D"
alias lst="ls -T --git-ignore -I=.git"

# ag
alias ag='ag --path-to-ignore ~/.config/ag/.ignore'

# filemanager
alias fm='nautilus'
