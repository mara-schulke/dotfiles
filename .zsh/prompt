nix-shell-status() {
    nix-shell-active

    if [ $? -eq 0 ]; then
        echo "%{$fg[magenta]%}shell%{$reset_color%} ";
    fi
}

formatted-current-branch() {
    local BRANCH="$(current_branch)"
    local LEN=${#BRANCH}

    if [ $LEN -gt 0 ]; then
        echo " %{$fg[yellow]%}$BRANCH%{$reset_color%} "
    else
        echo " "
    fi
}

zsh-prompt() {
	echo '$(nix-shell-status)$(basename "$PWD")$(formatted-current-branch)Î» '
}

setopt PROMPT_SUBST
PROMPT="$(zsh-prompt)"

