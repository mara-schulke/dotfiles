formatted-current-branch() {
    local BRANCH="$(current_branch)"
    local LEN=${#BRANCH}

    if [ $LEN -gt 0 ]; then
        echo " $BRANCH "
    else
        echo " "
    fi
}

zsh-prompt() {
	local BLUE="\[\033[1;34m\]"
	local NO_COLOR="\[\033[0m\]"

	echo '$(basename "$PWD")%{$fg[green]%}$(formatted-current-branch)%{$reset_color%}Î» '
}

setopt PROMPT_SUBST
PROMPT="$(zsh-prompt)"
